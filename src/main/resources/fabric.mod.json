{
	"schemaVersion": 1,
	"id": "lineblock",
	"version": "${version}",
	"name": "LineBlock",
	"description": "A visual programming mod that lets you write and run code using Minecraft blocks.",
	"authors": [
		"Spichka"
	],
	"contact": {
		"homepage": "https://www.youtube.com/@Spichka_",
		"sources": "https://github.com/Pawelgit1234/line_block"
	},
	"license": "CC0-1.0",
	"icon": "assets/lineblock/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.spichka.lineblock.LineBlock"
		],
		"fabric-datagen": [
			"com.spichka.lineblock.LineBlockDataGenerator"
		]
	},
	"mixins": [
		"lineblock.mixins.json"
	],
	"client": [
		"com.spichka.lineblock.LineBlockClient"
	],
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": "~1.20.4",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	},
	"custom": {
		"modmenu": {
			"links": {
				"modmenu.youtube": "https://www.youtube.com/@Spichka_"
			},
			"update_checker": true
		}
	}
}